<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Complaints Dashboard</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            html, body {
                height: 100%; /* Make the body take up the full height */
                margin: 0; /* Remove default margin */
            }

            .full-height-container {
                height: 100%; /* Ensure the container takes full height */
                display: flex;
                flex-direction: column; /* Stack elements vertically */
            }

            .main-container {
                flex-grow: 1; /* Allow this container to take up the remaining space */
                margin-bottom: 0; /* Remove bottom margin */
                margin-right: 5px;
            }

            .d-flex-custom {
                display: flex;
                justify-content: space-between;
                flex-grow: 1; /* Ensure the main content grows */
            }

            .right-column {
                margin-top: 5rem;
                display: flex;
                flex-grow: 1;
                flex-direction: column;
                gap: 5rem; /* Adds space between the smaller containers */
                margin-left: 30px; /* Add space on the left side of the right column */
            }

            .dropdown-container {
                margin-left: 5px;
                margin-bottom: 1rem;
            }

            .above {
                border-radius: 10px;
            }
            .below {
                border-radius: 10px;
            }
            .entire {
                margin-bottom: 10rem;
            }

            /* Update for full-width cards */
            .card {
                width: 100%;  /* Take full width of the container */
                margin-bottom: 15px; /* Add some space between the cards */
            }
        </style>
    </head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <body>
    <div>
        <!-- Navbar -->
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1">Complaints Dashboard</span>
    
                <!-- Right-Aligned Button -->
                <div class="ms-auto">
                    <button class="btn btn-primary">Complain</button>
                    <button class="btn btn-primary">Sign In</button>
                </div>
            </div>
        </nav>
    </div>

    <!-- Dropdown Container -->
    <div class="dropdown-container">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Select City
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">City 1</a></li>
            <li><a class="dropdown-item" href="#">City 2</a></li>
            <li><a class="dropdown-item" href="#">City 3</a></li>
        </ul>
    </div>

    <!-- Main Container -->
    <div class="container-fluid full-height-container ">
        <!-- Main Content Container with Flexbox Layout -->
        <div class="d-flex-custom entire">
          
            <!-- Main Content (Left side) -->
            <div class="flex-grow-1 main-container border border-dark p-3">
                <h2>Complaints</h2>

                <!-- Complaint Cards (Display dynamically from complaints array) -->
                <% complaints.forEach(complaint => { %>
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title"><%= complaint.title %></h5>
                            <p class="card-text"><%= complaint.description %></p>
                            <p><strong>Status:</strong> <%= complaint.status %></p>
                            <p><strong>Location:</strong> <%= complaint.location %></p>
                            <p><strong>Reported By:</strong> <%= complaint.user.name %> (Email: <%= complaint.user.email %>)</p>
                            <p><strong>Created At:</strong> <%= new Date(complaint.createdAt).toLocaleString() %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        
            <!-- Right Side Containers (Stacked below one another) -->
            <div class="right-column">
                <!-- First Smaller Container -->
                <div class="border border-dark p-3 above">
                    <h4>Left Container</h4>
                    <p>This is the left smaller container.</p>
                </div>
        
                <!-- Second Smaller Container -->
                <div class="border border-dark p-3 below">
                    <h4>Right Container</h4>
                    <p>This is the right smaller container.</p>
                </div>
            </div>
        </div>
    </div>
    
  </body>
</html>
